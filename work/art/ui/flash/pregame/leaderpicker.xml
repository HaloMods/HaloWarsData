      <Control name="ButtonB"             command="cancel" event="start" sound="play_menu_back_button" />

      <Control name="StickLeftLeft"       command="navLeft" event="start" digital="" threshold="0.90" repeat="" delay="0.5" rate=".20" sound="play_partysystem_menu_up_down" />
      <Control name="StickLeftRight"      command="navRight" event="start" digital="" threshold="0.90" repeat="" delay="0.5" rate=".20" sound="play_partysystem_menu_up_down" />

      <Control name="DpadLeft"            command="navLeft" event="start" repeat="" delay="0.5" rate=".20" sound="play_partysystem_menu_up_down" />
      <Control name="DpadRight"           command="navRight" event="start" repeat="" delay="0.5" rate=".20" sound="play_partysystem_menu_up_down" />

      <Control name="ButtonShoulderLeft"  command="navLeft" event="start" sound="play_partysystem_menu_up_down"/>
      <Control name="ButtonShoulderRight" command="navRight" event="start" sound="play_partysystem_menu_up_down"/>
   </Mode>
</Controls>
