<Controls>
   <Mode name="Main">
      <Control name="ButtonA"             command="accept" event="start" sound="play_ui_game_menu_select" />
      <Control name="ButtonB"             command="cancel" event="start" sound="play_ui_menu_back_button" />

      <Control name="StickLeftLeft"       command="navLeft" event="start" digital="" threshold="0.90" repeat="" delay="0.5" rate=".20" sound="play_ui_menu_vertical" />
      <Control name="StickLeftRight"      command="navRight" event="start" digital="" threshold="0.90" repeat="" delay="0.5" rate=".20" sound="play_ui_menu_vertical" />

      <Control name="DpadLeft"            command="navLeft" event="start" repeat="" delay="0.5" rate=".20" sound="play_ui_menu_vertical" />
      <Control name="DpadRight"           command="navRight" event="start" repeat="" delay="0.5" rate=".20" sound="play_ui_menu_vertical" />

      <Control name="ButtonShoulderLeft"  command="navLeft" event="start" sound="play_ui_menu_vertical"/>
      <Control name="ButtonShoulderRight" command="navRight" event="start" sound="play_ui_menu_vertical"/>

      <Control name="TriggerLeft"         command="navLeft" event="start" repeat="" delay="0.5" rate=".2" sound="play_ui_menu_vertical" />
      <Control name="TriggerRight"        command="navRight" event="start" repeat="" delay="0.5" rate=".2" sound="play_ui_menu_vertical" />

   </Mode>
</Controls>
